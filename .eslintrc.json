{
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": ["airbnb-base"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"import/prefer-default-export": "off",
		"no-unused-vars": "off",
		"no-console": "off",
		"import/extensions": "off"
	}
}
